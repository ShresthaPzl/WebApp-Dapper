@model IEnumerable<Models.Department>

@{
    ViewData["Title"] = "Department List";
}

<h1>Department List</h1>

<p>
    <a class="btn btn-success" asp-action="Create">New Department</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                S.N.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department_Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ int sn = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(sn++)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department_Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Department_Id },
                   new { @class = "btn btn-secondary" }) ||

                    <button type="submit" value="" class="btn btn-danger" onclick="confirmDelete(@item.Department_Id)">
                        Delete
                    </button>



                </td>
            </tr>
        }



    </tbody>
</table>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Warning!</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove this Department?
            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdnDepartmentId" />
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="deleteItem()"> Delete</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{ 

<script>
    function confirmDelete(itemId) {
        $('#hdnDepartmentId').val(itemId);
        $('#exampleModal').modal('show');
    }

    function deleteItem()
    {
        var departmentId = $('#hdnDepartmentId').val();
        window.location.href = "/Department/delete/" + departmentId;
    }


    /* to show success message dialoge box */
        function openSuccessModal(strMessage) {
            var myDiv = document.getElementById("MyModalSuccessAlertBody");
        myDiv.innerHTML = strMessage;
            $('#myModalSuccess').modal("show");
    }

    $(document).ready(function() {
        var msg = "@TempData["SuccessMessage"]";
        if (msg)
            openSuccessModal(msg);
    });

        /* Ends */
</script>
}